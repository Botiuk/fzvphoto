<div class="col-sm-4">
    <div id="<%= dom_id stadium %>">
        <div class="card text-bg-light mt-2 mb-3">
            <div class="card-body">
                <h5 class="card-title"><%= stadium.name %></h5>
                <h6 class="card-text">
                        <i class="bi bi-geo-alt"></i>
                        <% if stadium.street.present? %>
                            <%= t('.street') %> <%= stadium.street %>,
                        <% end %>
                        <%= Location.human_enum_name(:loctype, stadium.location.loctype) %> <%= stadium.location.name %>
                </h6>
                <h6 class="fw-light">
                    <% if stadium.location.district.present? %>
                        <%= stadium.location.district %> <%= t('.district') %>,
                    <% end %>
                    <% if stadium.location.region.present? %>
                        <%= stadium.location.region %> <%= t('.region') %>,
                    <% end %>
                    <%= stadium.location.country %>
                </h6>
                <%= link_to '<i class="bi bi-file-text"></i>'.html_safe, stadia_searchposts_path(id: stadium.id), :method => :get, class: "btn btn-secondary btn-sm ms-1" %>
                <%= link_to '<i class="bi bi-person-vcard"></i>'.html_safe, stadium_posts_searchposts_path(id: stadium.id), :method => :get, class: "btn btn-secondary btn-sm ms-1" %>

                <% if user_signed_in? %>
                    <%= link_to '<i class="bi bi-highlighter"></i>'.html_safe, edit_stadium_path(stadium), class: "btn btn-secondary btn-sm ms-1" %>
                <% end %>
            </div>
        </div>
    </div>
</div>
