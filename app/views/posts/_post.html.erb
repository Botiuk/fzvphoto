<div id="<%= dom_id post %>">
    <table>
        <tr>
            <td><h5><%= post.postdate %> | <%= post.title %></h5></td>
        </tr>
        <tr>
            <td><%= post.content.to_plain_text.truncate(256) %> <%= link_to '<i class="bi bi-plus-lg"></i>'.html_safe, post, class: "btn btn-secondary btn-sm ms-1" %></td>
        </tr>
    </table>
</div>