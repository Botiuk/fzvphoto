<div class="container text-start">
  <div class="row">
    <div class="col"><h4><%= t('.title') %></h4></div>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "card p-3 my-3"}) do |f| %>

    <div class="row g-3">
      <div class="col-12">
        <%= f.label :email, t('.email'), style: "display: block" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"  %>
      </div>

      <div class="col-12">
        <%= f.label :password, t('.password'), style: "display: block" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control"  %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div>
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, t('.remember'), class: "form-check-label" %>
        </div>
      <% end %>

      <div class="col-12">
        <%= f.submit t('.login'), class: "btn btn-success"  %>
      </div>

    </div>

  <% end %>
  <%# render "devise/shared/links" %>

</div>
