<div class="container">
  <% if @count == 0 %>
    <div class="text-center fs-1 text-body-tertiary">
        <i class="bi bi-file-text"></i>
    </div>
  <% else %>
    <div class="row">
      <% @posts.each do |post| %>
        <%= render 'posts/post', post: post %>
      <% end %>
    </div>
  <% end %>
</div>

<div class="d-flex justify-content-center">
  <%== pagy_bootstrap_combo_nav_js(@pagy) if @pagy.pages > 1 %>
</div>