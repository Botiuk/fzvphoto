<div class="container text-start mb-3 mt-1">
  <div class="row justify-content-end">
    <div class="col"><h4>
        <%= t('.title_part1') %> <%= Location.human_enum_name(:loctype, @location.loctype) %> <%= @location.name %>,
            <% if @location.district.present? %>
                <%= @location.district %> <%= t('.district') %>,
            <% end %>
            <% if @location.region.present? %>
                <%= @location.region %> <%= t('.region') %>,
            <% end %>
            <%= @location.country %>
            <% if @count == 0 %>
              <%= t('.title_empty') %>
            <% else %>
              (<%= t('.title_part2') %> <%= @count %>)
            <% end %>
        </h4></div>
  </div>
</div>