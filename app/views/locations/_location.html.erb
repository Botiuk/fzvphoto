<div id="<%= dom_id location %>">
    <table>
        <tr class="">
            <td><%= Location.human_enum_name(:loctype, location.loctype) %> <%= location.name %></td>
            <% if location.district.present? %>
                <td>, <%= location.district %> <%= t('.district') %></td>
            <% end %>
            <% if location.region.present? %>
                <td>, <%= location.region %> <%= t('.region') %></td>
            <% end %>
            <td>, <%= location.country %></td>
            <td><%= link_to '<i class="bi bi-file-text"></i>'.html_safe, locations_searchposts_path(id: location.id), :method => :get, class: "btn btn-secondary btn-sm ms-1" %></td>
            <% if user_signed_in? %>
                <td><%= link_to '<i class="bi bi-highlighter"></i>'.html_safe, edit_location_path(location), class: "btn btn-secondary btn-sm ms-1" %></td>
            <% end %>
        </tr>
    </table>
</div>